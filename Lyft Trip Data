/* Lyft Trip Data */
/* Examine the three tables */

SELECT * FROM trips;
 
SELECT * FROM riders;
 
SELECT * FROM cars;


/* Cross join between riders and cars */

SELECT riders.first,
   riders.last,
   cars.model
FROM riders, cars;


/* Create a Trip Log with the trips and its users */

SELECT trips.date, 
   trips.pickup, 
   trips.dropoff, 
   trips.type, 
   trips.cost,
   riders.first, 
   riders.last,
   riders.username
FROM trips
LEFT JOIN riders 
  ON trips.rider_id = riders.id;

  
  /* Create a link between trips and cars */

SELECT *
FROM trips
JOIN cars
  ON trips.car_id = cars.id;


/* Stack the riders table on new table */

SELECT *
FROM riders
UNION
SELECT *
FROM riders2;


/* Find average cost for trip and round to 2 decimal places */

SELECT ROUND(AVG(cost), 2)
FROM trips;


/* Find all riders who used Lyft less than 500 times */

SELECT *
FROM riders
WHERE total_trips < 500;


/* Calculate number of cars that are active */

SELECT COUNT(*)
FROM cars
WHERE status = 'active';


/* Find the two cars with the highest trips completed */

SELECT *
FROM cars
ORDER BY trips_completed DESC
LIMIT 2;
